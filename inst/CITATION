citHeader("To cite pastis in a publication use:")

citEntry(entry="Article",
	title = "PASTIS: Phylogenetic Assembly with Soft Taxonomic InferenceS",
        author = personList(as.person("G. H. Thomas"),as.person("K. Hartmann"), as.person("W. Jetz"), as.person("J. B. Joy"), as.person("A. Mimoto"), as.person("A. O. Mooers")),
	journal = "Methods in Ecology and Evolution",
  	year = "xxxx",
	volume = "xx",
	pages = "xx-xx",

        textVersion = "Thomas, G.H., Hartmann, K., Jetz, W., Joy, J.B., Mimoto, A., Mooers, A.O. PASTIS: Phylogenetic Assembly with Soft Taxonomic InferenceS. Methods in Ecology and Evolution. Submitted.")

citEntry(entry="Article",
	title = "The global diversity of birds in space and time",
        author = personList(as.person("W. Jetz"), as.person("G. H. Thomas"), as.person("J. B. Joy"), as.person("K. Hartmann"), as.person("A. O. Mooers")),
	journal = "Nature",
  	year = "2012",
	volume = "491",
	pages = "444-448",

        textVersion = "Jetz, W., Thomas, G.H., Joy, J.B., Hartmann, K., Mooers, A.O. 2012. The global diversity of birds in space and time. Nature 491, 444-448.")